<?xml version="1.0" encoding="GBK"?>
<module>
    <id>tshop-um-topbanner</id>
    <name>海报</name>
    <file>tshop-um-topbanner.php</file>
    <thumbnail>../../assets/images/default-thumbnail.png</thumbnail>
    <description xsi:type="xs:string" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">首页宽屏海报，宽度限制950，轮播或单张海报效果。</description>
    <requiredCache>true</requiredCache>
    <supportedWidth>950</supportedWidth>
    <themes default="default">
        <theme name="default">
            <css>assets/stylesheets/default.css</css>
        </theme>
        <theme name="sky">
            <css>assets/stylesheets/sky.css</css>
        </theme>
    </themes>
    <parameters>
        <group title="基本设置">
            <section folded="false" title="尺寸设置">
                <param ptype="text" name="mainheight" label="高度设置" formType="text" description=" 海报高度设置，默认500">500</param>
            </section>
        </group>
        <group title="轮播设置">
            <section folded="false" title="轮播效果">
                <param ptype="text" name="type" label="展示风格" formType="select" description="轮播的展示风格">
                    <option value="stylebar" selected="selected">标题风格</option>
                    <option value="stylenum">数字风格</option>
                    <option value="stylethumb">小图风格</option>
                    <option value="none">不显示</option>
                </param>
                <param ptype="text" name="num" label="图片张数" formType="select" description="图片张数">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4" selected="selected">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </param>
                <param ptype="text" name="arrow" label="轮播箭头" formType="select" description="轮播箭头">
                    <option value="1">显示</option>
                    <option value="2">不显示</option>
                </param>
                <param ptype="text" name="autoplay" label="自动播放" formType="select" description="是否自动播放设置">
                    <option value="true">是(默认)</option>
                    <option value="false">否</option>
                </param>
                <param ptype="text" name="easing" label="动画效果" formType="select" description="滚动的动画方方式">
                    <option value="easeNone">匀速(默认)</option>
                    <option value="easeIn">由慢到快</option>
                    <option value="easeOut">由快到慢</option>
                    <option value="easeInStrong">由慢到快-强</option>
                    <option value="easeOutStrong">由快到慢-强</option>
                    <option value="elasticOut">来回震动</option>
                    <option value="bounceOut" selected="selected">动感弹跳</option>
                    <option value="easeBothStrong">动感弹性</option>
                    <option value="bounceBoth">动感抖动</option>
                    <option value="elasticIn">变换抖动</option>
                </param>
                <param ptype="text" name="effect" label="滚动方式" formType="select" description="切换时的动画效果">
                    <option value="none">显示/隐藏效果</option>
                    <option value="fade" selected="selected">淡隐淡现</option>
                    <option value="scrollx">水平滚动(默认)</option>
                    <option value="scrolly">垂直滚动</option>
                </param>
                <param ptype="text" name="duration" label="动画时间" formType="text" description="动画时间(秒)">1</param>
                <param ptype="text" name="delay" label="停留间隔" formType="text" description="停留时间(秒)">2</param>
            </section>
        </group>
        <group title="轮播图片">
            <section folded="false" title="图片1">
                <param ptype="text" name="pic1_url" label="图片地址" formType="text" description="图片地址，尺寸：宽度限制950，高度可自定义"></param>
                <param ptype="text" name="pic1_thumb" label="缩 略 图" formType="text" description="缩略图地址，尺寸：120*55"></param>
                <param ptype="text" name="pic1_link" label="链接地址" formType="text" description="图片链接"></param>
                <param ptype="text" name="pic1_title" label="图片标题" formType="text" description="图片标题"></param>
            </section>
            <section folded="true" title="图片2">
                <param ptype="text" name="pic2_url" label="图片地址" formType="text" description="图片地址，尺寸：宽度限制950，高度可自定义"></param>
                <param ptype="text" name="pic2_thumb" label="缩 略 图" formType="text" description="缩略图地址，尺寸：120*55"></param>
                <param ptype="text" name="pic2_link" label="链接地址" formType="text" description="图片链接"></param>
                <param ptype="text" name="pic2_title" label="图片标题" formType="text" description="图片标题"></param>
            </section>
            <section folded="true" title="图片3">
                <param ptype="text" name="pic3_url" label="图片地址" formType="text" description="图片地址，尺寸：宽度限制950，高度可自定义"></param>
                <param ptype="text" name="pic3_thumb" label="缩 略 图" formType="text" description="缩略图地址，尺寸：120*55"></param>
                <param ptype="text" name="pic3_link" label="链接地址" formType="text" description="图片链接"></param>
                <param ptype="text" name="pic3_title" label="图片标题" formType="text" description="图片标题"></param>
            </section>
            <section folded="true" title="图片4">
                <param ptype="text" name="pic4_url" label="图片地址" formType="text" description="图片地址，尺寸：宽度限制950，高度可自定义"></param>
                <param ptype="text" name="pic4_thumb" label="缩 略 图" formType="text" description="缩略图地址，尺寸：120*55"></param>
                <param ptype="text" name="pic4_link" label="链接地址" formType="text" description="图片链接"></param>
                <param ptype="text" name="pic4_title" label="图片标题" formType="text" description="图片标题"></param>
            </section>
            <section folded="true" title="图片5">
                <param ptype="text" name="pic5_url" label="图片地址" formType="text" description="图片地址，尺寸：宽度限制950，高度可自定义"></param>
                <param ptype="text" name="pic5_thumb" label="缩 略 图" formType="text" description="缩略图地址，尺寸：120*55"></param>
                <param ptype="text" name="pic5_link" label="链接地址" formType="text" description="图片链接"></param>
                <param ptype="text" name="pic5_title" label="图片标题" formType="text" description="图片标题"></param>
            </section>
        </group>
    </parameters>
</module>