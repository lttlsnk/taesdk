<?xml version="1.0" encoding="GBK"?>
<module>
    <id>tshop-um-SA_BAOBEIZHANSHI</id>
    <name>宝贝展示</name>
    <file>tshop-um-SA_BAOBEIZHANSHI.php</file>
    <thumbnail>assets/images/default-thumbnail.png</thumbnail>
    <description xsi:type="xs:string" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">宝贝展示 一张大图带6个小图片</description>
    <requiredCache>true</requiredCache>
    <supportedWidth>950</supportedWidth>
    <themes default="default">
        <theme name="default">
            <css>assets/stylesheets/default.css</css>
        </theme>
    </themes>
    <parameters>
        <group title="大图宝贝">
            <section folded="false" title="大图宝贝">
                <param ptype="text" name="bbzsd_title" label="宝贝标题" formType="textarea" description="请填写宝贝标题">标题一</param>
                <param ptype="text" name="bbzsd_img" label="宝贝图片" formType="textarea" description="请填写宝贝的图片路径">assets/images/1.png</param>
                <param ptype="text" name="bbzsd_href" label="宝贝链接" formType="textarea" description="请填写宝贝的链接">http://www.taobao.com/?s</param>
            </section>
        </group>
        <group title="宝贝设置">
            <section folded="false" title="自定义宝贝">
                <param ptype="text" name="baobei_title" label="宝贝标题" formType="textarea" description="请填写宝贝标题，多个以 | 分隔">标题一|标题二|标题三|标题四|标题五|标题五</param>
                <param ptype="text" name="baobei_price" label="宝贝价格" formType="textarea" description="请填写宝贝的价格，多个以 | 分隔">22|33|44|5|66|233</param>
                <param ptype="text" name="baobei_img" label="宝贝图片" formType="textarea" description="请填写宝贝的图片路径，多个以 | 分隔">assets/images/1.png|assets/images/2.png|assets/images/1.png|assets/images/2.png|assets/images/1.png|assets/images/2.png</param>
                <param ptype="text" name="baobei_href" label="宝贝链接" formType="textarea" description="请填写宝贝的链接，多个以 | 分隔">http://www.taobao.com/?1s|http://www.taobao.com/?2d|http://www.taobao.com/?3|http://www.taobao.com/?4|http://www.taobao.com/?s5|http://www.taobao.com/?s5</param>
            </section>
            <section folded="false" title="选择宝贝">
                <param ptype="item" name="baobei_system" label="选择宝贝" formType="itemForm" description="请选择系统宝贝最多6个宝贝"></param>
                <param ptype="text" name="baobei_paixu" label="宝贝排序" formType="select" description="请选择系统宝贝输出的顺序 默认按人气升序">
                    <option selected="selected" value="ceofp">人气宝贝升序排序</option>
                    <option value="_ceofp">人气宝贝降序排序</option>
                    <option value="hotsell">热销宝贝升序排序</option>
                    <option value="_hotsell">热销宝贝降序排序 </option>
                    <option value="price">以宝贝价格升序排序</option>
                    <option value="_price">以宝贝价格降序排序 </option>
                    <option value="newOn">以最新上架宝贝升序排序 </option>
                    <option value="_newOn">以最新上架宝贝降序排序 </option>
                    <option value="HotKeep">以热门搜藏升序排序 </option>
                    <option value="_HotKeep">以热门搜藏降序排序  </option>
		        </param>
            </section>
        </group>
        <group title="标题栏设置">
            <section folded="false" title="标题栏设置">
                <param ptype="text" name="title_open" label="标题栏" formType="range" description="默认为 显示">
                    <option selected="selected" value="yes">显示</option>
                    <option value="no">不显示</option>
		        </param>
                <param ptype="text" name="title" label="主标题" formType="text" description="请填写标题栏目名称">自定义导航栏目</param>
                <param ptype="text" name="more" label="更多链接" formType="text" description="请填写更多按钮的链接">http://www.taobao.com/?s</param>
                <param ptype="text" name="title_wenzi" label="分类文字" formType="textarea" description="请填写标题栏目上的分类文字，多个以 | 分隔">标题一|标题二|标题三|标题四|标题五</param>
                <param ptype="text" name="title_href" label="分类链接" formType="textarea" description="请填写标题栏目上的分类文字的链接，多个以 | 分隔">http://www.taobao.com/?s|http://www.taobao.com/?d|http://www.taobao.com/?s|http://www.taobao.com/?s|http://www.taobao.com/?s</param>
            </section>
        </group>
        <group title="功能设置">
            <section folded="false" title="功能设置">
                <param ptype="text" name="baobei_form" label="宝贝来源" formType="range" description="默认为自定义宝贝">
                    <option value="system">系统宝贝</option>
                    <option selected="selected" value="zidingyi">自定义宝贝</option>
		        </param>
                <param ptype="text" name="target" label="打开方式" formType="range" description="默认为新窗口打开">
                    <option selected="selected" value="_blank">在新窗口打开</option>
                    <option value="_parent">在父窗口打开</option>
                    <option value="_self">在当前窗口打开</option>
                    <option value="_top">在浏览器窗口打开</option>
		        </param>
            </section>
        </group>
    </parameters>
</module>
